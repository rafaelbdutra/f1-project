{
    "baseUrl": "https://www.formula1.com/en/",

    "aws": {
        "endpoint": "http://localhost:4572",
        "bucket": "f1-project",
        "drivers": {
            "json-file-path": "drivers/drivers.json",
            "image-path": "drivers/images/"
        }
    },

    "drivers": {
        "path": "drivers.html",
        "selectors": {
            "main-link-selector": "div.col-12 > a",
            "thumbnail-selector": ".listing-item--photo img",
            "name": "h1",
            "number": ".driver-number",
            "flag": ".icn-flag img",
            "profilePicture": ".driver-image-crop-inner img",
            "helmetPicture": ".brand-logo img"
        },
        "output-path": "temp/drivers/",
        "image-output-path": "images/",
        "jsonOutputFile": "drivers.json"
    },

    "teams": {
        "path": "teams.html",
        "selectors": {
            "main-link-selector": "div.col-12 > a",
            "car-image-selector": "div.listing-image .team-car img",
            "small-logo-selector": "div.logo .team-car img",
            "name": "h1",
            "bigLogo": ".brand-logo img",
            "drivers": ".driver-name"
        },
        "output-path": "temp/teams/",
        "image-output-path": "images/",
        "jsonOutputFile": "teams.json"
    },

    "tracks": {
        "path": "latest/article.f1-schedule-2020-latest-information.3P0b3hJYdFDm9xFieAYqCS.html",
        "selectors": {
            "main-link-selector": "div.f1-article--rich-text:nth-child(2) a",
            "track-images-selector": "div.f1-image--wrapper img",
            "name": "h1"
        },
        "output-path": "temp/tracks/",
        "image-output-path": "images/",
        "jsonOutputFile": "track.json"
    }
}